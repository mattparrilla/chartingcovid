{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
      "comma-dangle": "off",
      "arrow-parens": "off",
      "spaced-comment": "off",
      "indent": "off",
      "quotes": "off",
      "object-curly-newline": "off",
      "no-confusing-arrow": "off",
      "operator-linebreak": ["error", "after"]
    }
}

